<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    android:orientation="vertical"
    android:weightSum="3">
    <!--    logo va text-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="3"
        android:orientation="vertical">
        <!--        logo-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:gravity="center"
            android:layout_marginTop="10dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/logo" />

        </LinearLayout>
        <!--text-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Đăng ký"
                android:fontFamily="@font/bold"
                android:textSize="40dp"
                android:gravity="center"
                android:textColor="@color/white"/>
        </LinearLayout>
    </LinearLayout>
    <!-- form-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:weightSum="4"
        android:orientation="vertical">
        <!--email-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="10dp">
            <EditText
                android:id="@+id/dk_email"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@drawable/input"
                android:hint="Nhập email"
                android:textColor="@color/black"
                android:fontFamily="@font/regular"
                android:textSize="25dp"
                android:paddingLeft="5dp"
                android:inputType="textEmailAddress"/>
        </LinearLayout>
        <!--pass-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="10dp">

            <EditText
                android:id="@+id/dk_pass"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@drawable/input"
                android:hint="Nhập mật khẩu"
                android:textColor="@color/black"
                android:fontFamily="@font/regular"
                android:textSize="25dp"
                android:paddingLeft="5dp"
                android:inputType="textPassword"/>
        </LinearLayout>
        <!--pass-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="10dp">
            <EditText
                android:id="@+id/dk_confirm"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@drawable/input"
                android:hint="Nhập lại mật khẩu"
                android:textColor="@color/black"
                android:fontFamily="@font/regular"
                android:textSize="25dp"
                android:paddingLeft="5dp"
                android:inputType="textPassword"/>
        </LinearLayout>
        <!-- progressBar-->
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progressbar_dk"
            android:visibility="gone"/>
        <!--bnt-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center">
            <Button
                android:id="@+id/dk_bnt"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/square"
                android:text="Đăng ký"
                android:textSize="30dp"
                android:textColor="@color/white"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:orientation="vertical"
        android:weightSum="3">

        <!-- icon and text-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.25"
            android:gravity="center|bottom"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đăng ký với"
                android:textColor="@color/white"
                android:textSize="25dp"
                android:fontFamily="@font/bold"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:src="@drawable/icons_google"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:src="@drawable/logos_facebook"/>
        </LinearLayout>
        <!-- line-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:gravity="center">
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/black"/>
        </LinearLayout>
        <!--sign up -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.25"
            android:gravity="center|top"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bạn đã có tài khoản?"
                android:textColor="@color/white"
                android:textSize="25dp"
                android:fontFamily="@font/bold"/>
            <TextView
                android:id="@+id/signin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Đăng nhập"
                android:textColor="@color/background"
                android:textSize="25dp"
                android:fontFamily="@font/bold"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
