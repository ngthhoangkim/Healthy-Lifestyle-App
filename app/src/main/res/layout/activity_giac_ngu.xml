<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".chisosuckhoe.Giac_ngu"
    android:orientation="vertical"
    android:weightSum="10">
<!--txt-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Kiểm tra giấc ngủ"
            android:textColor="@color/white"
            android:background="@drawable/gradient"
            android:gravity="center"
            android:textSize="30dp"
            android:fontFamily="@font/bold"/>
    </LinearLayout>
<!--input-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="2">
        <!--giờ ngủ-->
        <TextView
            android:id="@+id/txt_ngu"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Giờ ngủ"
            android:background="@drawable/input"
            android:layout_margin="10dp"
            android:paddingLeft="5dp"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:fontFamily="@font/regular"
            android:gravity="center|left"/>
        <!--giờ dậy-->
        <TextView
            android:id="@+id/txt_day"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/input"
            android:layout_margin="10dp"
            android:text="Giờ dậy"
            android:paddingLeft="5dp"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:fontFamily="@font/regular"
            android:gravity="center|left"/>
    </LinearLayout>
<!--loi khuyên-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6">
        <TextView
            android:id="@+id/txt_loikhuyen"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="25sp"
            android:text="Lời khuyên"
            android:fontFamily="@font/regular"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:textColor="@color/black"
            android:background="@drawable/input"
            android:layout_margin="10dp"/>
    </LinearLayout>
<!--submit-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center">
        <Button
            android:id="@+id/bnt_check"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="@drawable/gradient"
            android:text="Kiểm tra"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:fontFamily="@font/bold"/>
    </LinearLayout>
<!--footer-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="5"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/home" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/schedule" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/chat" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/shoopingbag" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/infor_user"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/user" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>