<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".chisosuckhoe.chi_so_suc_khoe"
    android:weightSum="10"
    android:orientation="vertical">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="LỜI KHUYÊN SỨC KHỎE"
            android:textColor="@color/white"
            android:background="@drawable/gradient"
            android:gravity="center"
            android:textSize="25dp"
            android:fontFamily="@font/bold"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:weightSum="3"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/sleep"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="2"
            android:background="@drawable/square"
            android:layout_margin="10dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.25"
                android:text="Theo dõi giấc ngủ"
                android:textSize="20dp"
                android:gravity="center"
                android:textColor="@color/black"
                android:fontFamily="@font/bold"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.75"
                android:src="@drawable/sleep"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/drink"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="2"
            android:background="@drawable/square"
            android:layout_margin="10dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.25"
                android:text="Theo dõi uống nước"
                android:textSize="20dp"
                android:gravity="center"
                android:textColor="@color/black"
                android:fontFamily="@font/bold"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.75"
                android:src="@drawable/water"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/bmi"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="2"
            android:background="@drawable/square"
            android:layout_margin="10dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.25"
                android:text="Theo dõi BMI"
                android:textSize="20dp"
                android:gravity="center"
                android:textColor="@color/black"
                android:fontFamily="@font/bold"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.75"
                android:src="@drawable/bmi"/>

        </LinearLayout>

    </LinearLayout>
<!--fotter-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="5"
        android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/home"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/home" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/icon_schedule_cs"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/schedule" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/chat" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/icon_goikham_cs"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/shoopingbag" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/icon_thongtin_cs"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/infor_user"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/user" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


