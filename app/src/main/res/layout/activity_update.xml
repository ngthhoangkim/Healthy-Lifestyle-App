<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10">
    <!--    text view-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="THÔNG TIN BỆNH NHÂN"
            android:textColor="@color/white"
            android:background="@drawable/gradient"
            android:gravity="center"
            android:textSize="20dp"
            android:fontFamily="@font/bold"/>
    </LinearLayout>
    <!--    main-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:weightSum="6"
        android:orientation="vertical">
        <!--        email-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:weightSum="2">

            <TextView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="Email"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:fontFamily="@font/bold"
                android:gravity="center|left"
                android:layout_marginLeft="10dp"/>

            <EditText
                android:id="@+id/uEmail"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/input"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:hint="Nhập email"
                android:paddingLeft="10dp"
                android:gravity="center|left"
                android:textColor="@color/black"
                android:fontFamily="@font/regular"
                android:textSize="15dp"
                android:inputType="textEmailAddress"
                android:maxLines="1"/>

        </LinearLayout>
        <!--        name-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:weightSum="2">

            <TextView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="Tên bệnh nhân"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:fontFamily="@font/bold"
                android:gravity="center|left"
                android:layout_marginLeft="10dp"/>

            <EditText
                android:id="@+id/uName"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/input"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:hint="Nhập tên"
                android:paddingLeft="10dp"
                android:gravity="center|left"
                android:textColor="@color/black"
                android:fontFamily="@font/regular"
                android:textSize="15dp"
                android:maxLines="1"/>

        </LinearLayout>
        <!--        phone-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:weightSum="2">

            <TextView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="Số điện thoại"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:fontFamily="@font/bold"
                android:gravity="center|left"
                android:layout_marginLeft="10dp"/>

            <EditText
                android:id="@+id/uPhone"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/input"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:hint="Nhập số điện thoại"
                android:paddingLeft="10dp"
                android:gravity="center|left"
                android:textColor="@color/black"
                android:fontFamily="@font/regular"
                android:textSize="15dp"
                android:inputType="number"
                android:maxLines="1"/>

        </LinearLayout>
        <!--        gender-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:weightSum="2">

            <TextView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="Giới tính"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:fontFamily="@font/bold"
                android:gravity="center|left"
                android:layout_marginLeft="10dp"/>

            <RadioGroup
                android:id="@+id/uGender"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center|left">

                <RadioButton
                    android:id="@+id/uGender_men"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nam"
                    android:textSize="15dp"
                    android:fontFamily="@font/regular"
                    android:textColor="@color/black"
                    android:buttonTint="@color/background" />
                <RadioButton
                    android:id="@+id/uGender_women"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nữ"
                    android:textSize="15dp"
                    android:fontFamily="@font/regular"
                    android:textColor="@color/black"
                    android:buttonTint="@color/background"
                    android:layout_marginLeft="30dp"/>

            </RadioGroup>
        </LinearLayout>
        <!--        date-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:weightSum="2">

            <TextView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="Ngày sinh"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:fontFamily="@font/bold"
                android:gravity="center|left"
                android:layout_marginLeft="10dp"/>

            <EditText
                android:id="@+id/uDate"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/input"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:hint="Chọn ngày"
                android:paddingLeft="10dp"
                android:gravity="center|left"
                android:textColor="@color/black"
                android:fontFamily="@font/regular"
                android:textSize="15dp"
                android:maxLines="1"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:weightSum="2">

            <TextView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="Địa chỉ"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:fontFamily="@font/bold"
                android:gravity="center|left"
                android:layout_marginLeft="10dp"/>

            <EditText
                android:id="@+id/uAddress"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/input"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:hint="Nhập địa chỉ"
                android:paddingLeft="10dp"
                android:gravity="center|left"
                android:textColor="@color/black"
                android:fontFamily="@font/regular"
                android:textSize="15dp"
                android:maxLines="1"/>
        </LinearLayout>
    </LinearLayout>
    <!--button-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:weightSum="2"
        android:orientation="vertical">
        <Button
            android:id="@+id/uSubmit"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Cập nhật"
            android:background="@drawable/gradient"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="5">

            <LinearLayout
                android:id="@+id/home"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/icon_home_tt"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/home" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/schedule" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/chat" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/shoopingbag" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/icon_user_tt"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/user" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
