<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Quan_ly_goi_kham"
    android:weightSum="10"
    android:orientation="vertical">
<!--    txt-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/gradient">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Thông tin gói khám"
            android:textSize="30sp"
            android:textColor="@color/white"
            android:fontFamily="@font/bold"
            android:gravity="center"/>
    </LinearLayout>
<!--    main-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:orientation="vertical"
        android:weightSum="10">
<!--        input name-->
        <EditText
            android:id="@+id/txt_name"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:background="@drawable/input"
            android:layout_margin="10dp"
            android:hint="Nhập tên gói khám"
            android:paddingLeft="10dp"
            android:gravity="center|left"
            android:textColor="@color/black"
            android:fontFamily="@font/regular"
            android:textSize="20sp"
            android:maxLines="1"/>
<!--        input price and index-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:weightSum="2"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/txt_price"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/input"
                android:layout_margin="10dp"
                android:hint="Nhập giá"
                android:paddingLeft="10dp"
                android:gravity="center|left"
                android:textColor="@color/black"
                android:fontFamily="@font/regular"
                android:textSize="20sp"
                android:maxLines="1"/>
            <EditText
                android:id="@+id/txt_index"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/input"
                android:layout_margin="10dp"
                android:hint="Nhập chỉ số"
                android:paddingLeft="10dp"
                android:gravity="center|left"
                android:textColor="@color/black"
                android:fontFamily="@font/regular"
                android:textSize="20sp"
                android:inputType="number"
                android:maxLines="1"/>
        </LinearLayout>
<!--        input describe-->
        <EditText
            android:id="@+id/txt_describe"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6"
            android:background="@drawable/input"
            android:layout_margin="10dp"
            android:hint="Nhập mô tả"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:gravity="left"
            android:inputType="textMultiLine"
            android:textColor="@color/black"
            android:fontFamily="@font/regular"
            android:textSize="20sp" />
    </LinearLayout>
<!--    bnt-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="2">
    <Button
        android:id="@+id/bnt_add"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/gradient"
        android:layout_margin="10dp"
        android:text="Thêm"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:fontFamily="@font/bold"/>
        <Button
            android:id="@+id/bnt_show"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/gradient"
            android:layout_margin="10dp"
            android:text="Danh sách"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:fontFamily="@font/bold"/>
    </LinearLayout>
<!--    fotter-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="5">
        <LinearLayout
            android:id="@+id/home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/icon_home_tt"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/home" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/schedule" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/chat" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/shoopingbag" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/icon_user_tt"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/user" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>